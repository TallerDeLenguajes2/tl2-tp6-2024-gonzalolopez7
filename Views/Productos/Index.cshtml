@{
    ViewData["Title"] = "Productos";
}

@model List<Producto>

<h1>@ViewData["Title"]</h1>

<div>
    <table class="table table-striped container">
        <thead>
            <tr class="row">
                <th scope="col" class="col-6">Producto</th>
                <th scope="col" class="col-2">Precio</th>
                <th scope="col" class="col-4">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr class="row">
                    <td class="col-6">@producto.Descripcion</td>
                    <td class="col-2">@producto.Precio</td>
                    <td class="col-4 container">
                        <div class="row justify-content-evenly">
                            <a asp-action="Modificar" asp-route-id="@producto.IdProducto" class="btn btn-primary col-3">Modificar</a>
                            <a asp-action="Eliminar" asp-route-id="@producto.IdProducto" class="btn btn-danger col-3">Eliminar</a>
                            <!-- <button data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn btn-danger col-3">Eliminar</button> -->
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <a asp-action="Crear" class="btn btn-success">Nuevo Producto</a>
</div>

